<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40sp"
    tools:context=".Fragment.BottomPlayerFragment"
    android:background="@color/mainColor"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/bottomPlayerLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/white_like"
            android:padding="10sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/bottomPlayerMusicName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/textColor"
            android:layout_weight="1"
            android:gravity="bottom"
            tools:ignore="NestedWeights" />

        <TextView
            android:id="@+id/bottomPlayerAuthorName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/cardWhite"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="top"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/bottomPlayerPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/white_play"
            android:padding="10sp"/>

    </LinearLayout>



</LinearLayout>