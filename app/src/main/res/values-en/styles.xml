<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mainColor</item>
        <item name="colorPrimaryDark">@color/mainColor</item>
        <item name="colorAccent">@color/cardWhite</item>
        <item name="android:textColorPrimary">@color/cardWhite</item>
        <item name="android:colorBackground">@color/cardColor</item>
    </style>

    <style name="ProfileImage">
        <item name="android:radius">5sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoTitleBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="ToolbarTheme">
        <item name="colorControlNormal">@color/textColor</item>
        <item name="android:fontFamily">@font/solway_medium</item>
        <item name="android:textColor">@color/textColor</item>
    </style>



    <style name="MainTextTheme">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/nk63_regular</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SecondaryTextTheme">
        <item name="android:textColor">@color/cardWhite</item>
        <item name="android:fontFamily">@font/nk63_regular</item>
        <item name="android:textColorHint">@color/cardWhite</item>
    </style>

    <style name="LightButtonsTheme">
        <item name="android:textColor">@color/mainColor</item>
        <item name="android:fontFamily">@font/nk63_regular</item>
        <item name="android:background">@color/cardWhite</item>
    </style>

    <style name="DarkButtonsTheme">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/nk63_regular</item>
        <item name="android:background">@color/cardColor</item>
    </style>

    <style name="CircularProgress">
        <item name="colorAccent">@color/textColor</item>
    </style>



    <style name="TabLayoutTextSize">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="CommentCommandTheme">
        <item name="android:textColorAlertDialogListItem">@color/textColor</item>
        <item name="android:fontFamily">@font/nk63_regular</item>
    </style>

    <style name="EditProfileImageTheme">
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:layout_width">30sp</item>
        <item name="android:layout_height">30sp</item>
    </style>

    <style name="MainToolbarSearchViewTheme">
        <item name="colorControlNormal">@color/textColor</item>
        <item name="hintTextColor">@color/textColor</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/nk63_regular</item>
    </style>

    <style name="SearchViewTheme">
        <item name="android:layout_marginTop">5sp</item>
    </style>


</resources>
